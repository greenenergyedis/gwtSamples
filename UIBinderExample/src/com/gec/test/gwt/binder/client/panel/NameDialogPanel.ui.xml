<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel styleName="dialogVPanel" horizontalAlignment="ALIGN_LEFT">
			<g:HTML><b>Sending name to the server: </b></g:HTML>
			<g:Label ui:field="textToServerLabel" />
			<g:HTML><br /><b>Server replies:</b></g:HTML>
			<g:HTML ui:field="serverResponseLabel" >Response</g:HTML>
        	<g:Button ui:field="closeButton" text="Close" />
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 